@model LoginViewModel
@{
}
<div class="w-50 m-auto">
    <form class="form-control" method="post" asp-controller="Login" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" type="email" asp-for="Email" required/>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" required />
        </div>
        <div>
            <input type="submit" class="form-control w-50 m-auto mt-2" value="Se connecter"/>
        </div>
    </form>
</div>
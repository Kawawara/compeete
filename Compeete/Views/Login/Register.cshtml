@model RegisterViewModel
@{
}
<div class="w-50 m-auto">
    <form class="form-control" method="post" asp-controller="Login" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" type="UserName" asp-for="UserName" required />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" type="email" asp-for="Email" required />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Birthdate"></label>
            <input class="form-control" type="date" asp-for="Birthdate" required />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Sex"></label>
            <select asp-for="Sex" class="form-control" required>
                <option value="Homme">Homme</option>
                <option value="Femme">Femme</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" required />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" type="password" asp-for="ConfirmPassword" required />
        </div>
        <div>
            <input type="submit" class="form-control w-50 m-auto mt-2" value="S'inscrire" />
        </div>
    </form>
</div>